{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "off",
    "quotes": [
      "warn",
      "double",
      { "avoidEscape": true, "allowTemplateLiterals": false }
    ],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}
